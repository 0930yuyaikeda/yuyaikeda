---
import Layout from '../layouts/Layout4_en.astro';
import '../styles/global.css';
import myBackground from '../assets/img/sky.jpg';
import yuyaikedaImage from '../assets/img/yuyaikeda_square.jpg';
import journeyToTheUniverseWebVideo from '../assets/mp4/journey_to_the_universe_web.mp4';
import akihirotamuraWebVideo from '../assets/mp4/akihirotamura_web1.mp4';
import loyloyFlyer1 from '../assets/img/loyloy_flyer1.png';
import loyloyFlyer2 from '../assets/img/loyloy_flyer2.png';
---

<Layout>
    <script>
        import '../js/quick.js';
    </script>
    <section class="h-[400vh] bg-gray-200 text-gray-500 relative">
        <div class="pin-container h-screen flex items-center justify-center overflow-hidden">
            <!-- ==================== No.1 ==================== -->
            <div class="num num-1 opacity-100 w-full pointer-events-none">
                <div class="container mx-auto px-4 animate__animated animate__fadeIn animate__slow">
                    <div class=" py-15" style={`background-image: url('${myBackground.src}')`}>
                        <div class="headline">
                            <div id="ta01-main-text1" class="p-2 ta01-text text-4xl md:text-6xl ">
                                <span class="ta01-char font-bold text-white" style="--char-index: 1"> Y </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 2"> U </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 3"> Y </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 4"> A </span>
                                <span class="whitespace">&nbsp;</span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 5"> I </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 6"> K </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 7"> E </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 8"> D </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 9"> A </span>
                            </div>
                        </div>
                        <div class="headline">
                            <div id="ta01-main-text2" class="p-2 ta01-text text-4xl md:text-6xl ">
                                <span class="ta01-char font-bold text-white" style="--char-index: 1"> p </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 2"> o </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 3"> r </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 4"> t </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 5"> f </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 6"> o </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 7"> l </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 8"> i </span>
                                <span class="ta01-char font-bold text-white" style="--char-index: 9"> o </span>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="text-center font-bold font-sans text-base text-gray-600 animate__animated animate__fadeOutDown animate__slow animate__infinite infinite">↓ scroll down ↓</p>
            </div>
            <!-- ==================== No.2 ==================== -->
            <div class="num num-2 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4  text-center text-base text-gray-600">
                            <h3 class="font-sans text-4xl font-bold">about</h3>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.3 ==================== -->
            <div class="num num-3 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/8">
                            <img class="rounded" src={yuyaikedaImage.src} alt="Ikeda Photos">
                        </div>
                        <div class="w-full md:w-3/8 md:px-10 text-base text-gray-600">
                            <h3 class="mt-3 text-center text-xl font-bold">池田 優也 / Yuya Ikeda </h3>
                            <p class="mt-3 font-serif">Born in 1996. Originally from Tokyo.</p>
                            <p class="mt-3 font-serif">After graduating from art university, I started my career at an IT company in Tokyo. I worked mainly on database management and web system development.</p>
                            <p class="mt-3 font-serif">Later, I moved to Cambodia. Currently, I support an NPO while also working as a freelancer.</p>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.4 ==================== -->
            <div class="num num-4 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4 text-center text-base text-gray-600">
                            <h3 class="font-sans text-4xl font-bold">policy</h3>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.5 ==================== -->
            <div class="num num-5 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4 text-center text-base text-gray-600">
                            <p class="font-serif">My goal is to build a "SAFE ZONE" for myself and my team.</p>
                            <p class="mt-3 font-serif">I believe psychological safety is essential for every workplace.</p>
                            <p class="mt-3 font-serif">When people feel respected and heard, ideas flow freely.</p> 
                            <p class="mt-3 font-serif">That is how we unlock our best creative work.</p>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.6 ==================== -->
            <div class="num num-6 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4 text-center text-base text-gray-600">
                            <h3 class="font-sans text-4xl font-bold">works</h3>
                            <p class="mt-3 text-xs">web design / graphic design / system development</p>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.7 ==================== -->
            <div class="num num-7 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="w-full md:w-1/3 rounded-md">
                            <div class="m-3">
                                <div class="text-center p-3 font-sans bg-transparent text-gray-600 border border-gray-600 rounded">
                                    <p class="text-2xl font-sans font-bold">web design</p>
                                    <p class="mt-3 text-xs font-serif"> ウェブデザイン </p>
                                    <p class="mt-6 text-xs font-serif">e.g. business / portfolio / blog sites</p>
                                </div>
                            </div>
                        </div>
                        <div class="w-full md:w-1/3 rounded-md">
                            <div class="m-3">
                                <div class="text-center p-3 font-sans bg-transparent text-gray-600 border border-gray-600 rounded">
                                    <p class="text-2xl font-sans font-bold">graphic design</p>
                                    <p class="mt-3 text-xs font-serif">グラフィックデザイン</p>
                                    <p class="mt-6 text-xs font-serif">e.g. fryer / catalog etc.</p>
                                </div>
                            </div>
                        </div>
                        <div class="w-full md:w-1/3 rounded-md">
                            <div class="m-3">
                                <div class="text-center p-3 font-sans bg-transparent text-gray-600 border border-gray-600 rounded">
                                    <p class="text-2xl font-sans font-bold">system development</p>
                                    <p class="mt-3 text-xs font-serif">システム開発・支援</p>
                                    <p class="mt-6 text-xs font-serif">e.g. development / operations / maintenance</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.8 ==================== -->
            <div class="num num-8 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4 text-center text-base text-gray-600">
                            <h3 class="font-sans text-4xl font-bold">web design</h3>
                            <p class="mt-3 text-xs">my works</p>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.9 ==================== -->
            <div class="num num-9 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="w-full md:w-5/8">
                            <video class="" src={journeyToTheUniverseWebVideo} autoplay muted loop playsinline></video>
                        </div>
                        <div class="w-full md:w-3/8 md:px-10 text-base text-gray-600">
                            <h3 class="mt-6 text-center text-xl font-sans font-bold">JOURNEY TO THE UNIVERSE </h3>
                            <p class="mt-6 text-base font-serif text-gray-600">Explore about the solar system.<span class="text-red-500">This site is not available on mobile devices yet.</span></p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">launched: </span>2025.8</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">duration: </span>about 3 months</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">client: </span>none (my project)</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">tech stack: </span>Photoshop / Illustrator / Firefly / HTML / CSS / Java Script</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">my role: </span>design / coding</p>
                            <div class="m-6 text-center">
                                <a class="inline-block w-full md:w-75 font-sans bg-transparent hover:bg-gray-600 text-gray-600 hover:text-white py-2 border border-gray-600 hover:border-transparent rounded duration-500" href="https://0930yuyaikeda.github.io/journey_to_the_universe/journey_to_the_universe.html" target="_blank">
                                    view website
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.10 ==================== -->
            <div class="num num-10 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="w-full md:w-5/8">
                            <video class="" src={akihirotamuraWebVideo} autoplay muted loop playsinline></video>
                        </div>
                        <div class="w-full md:w-3/8 md:px-10 text-base text-gray-600">
                            <h3 class="mt-6 text-center text-xl font-sans font-bold">AKIHIRO TAMURA</h3>
                            <p class="mt-6 text-base font-serif text-gray-600">This is the website of actor Tamura Akihiro.</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">launched: </span>2025.12</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">duration: </span>about 1.5 months</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">client: </span>acquaintance actor</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">tech stack: </span>Canon EOS 80D(camera) / Photoshop / Illustrator / Astro / Tailwind CSS / MicroCMS</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">my role: </span>photograph / design / coding</p>
                            <div class="m-6 text-center">
                                <a class="inline-block w-full md:w-75 font-sans bg-transparent hover:bg-gray-600 text-gray-600 hover:text-white py-2 border border-gray-600 hover:border-transparent rounded duration-500" href="https://akihirotamura.com/" target="_blank">
                                    view website
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.11 ==================== -->
            <div class="num num-11 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row md:items-center">
                        <div class="hidden md:block md:w-1/8"></div>
                        <div class="w-full md:w-3/4 text-center text-base text-gray-600">
                            <h3 class="font-sans text-4xl font-bold">graphic design</h3>
                            <p class="mt-3 text-xs">my works</p>
                        </div>
                        <div class="hidden md:block md:w-1/8"></div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.12 ==================== -->
            <div class="num num-12 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="w-full md:w-5/8">
                            <img class="rounded" src={loyloyFlyer1.src} alt="Ikeda Photos">
                        </div>
                        <div class="w-full md:w-3/8 md:px-10 text-base text-gray-600">
                            <h3 class="mt-6 text-center text-xl font-sans font-bold">LOYLOY Promotional Flyer 2025</h3>
                            <p class="mt-6 text-base font-serif text-gray-600">I designed a promotional flyer for LOYLOY, a fair trade brand from Cambodia.</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">launched: </span>2025.05</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">duration: </span>about 2 weeks</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">client: </span>LOYLOY</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">tech stack: </span>Photoshop / Illustrator</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">my role: </span>design</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ==================== No.13 ==================== -->
            <div class="num num-13 absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none">
                <div class="container mx-auto px-4">
                    <div class="flex flex-col md:flex-row">
                        <div class="w-full md:w-5/8">
                            <img class="rounded" src={loyloyFlyer2.src} alt="Ikeda Photos">
                        </div>
                        <div class="w-full md:w-3/8 md:px-10 text-base text-gray-600">
                            <h3 class="mt-6 text-center text-xl font-sans font-bold">LOYLOY Business Flyer 2025</h3>
                            <p class="mt-6 text-base font-serif text-gray-600">I designed a business flyer for LOYLOY, a fair trade brand from Cambodia.</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">launched: </span>2025.05</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">duration: </span>about 2 weeks</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">client: </span>LOYLOY</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">tech stack: </span>Photoshop / Illustrator</p>
                            <p class="mt-3 text-base font-serif text-gray-600"><span class="font-sans font-bold">my role: </span>design</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container mx-auto px-4 h-1/2">
        <div class="flex flex-col md:flex-row">
            <div class="w-full rounded-md">
                <div class="m-3">
                    <a href="/contact_en">
                        <div class="text-center p-3 font-sans bg-transparent border hover:bg-gray-600 text-gray-600 hover:text-white border-gray-600 hover:border-transparent rounded duration-500">
                            <p class="text-2xl font-sans font-bold">contact</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="flex flex-col md:flex-row">
            <div class="w-full md:w-full rounded-md text-center text-gray-600">
                <a href="/en">back to first view</a>
            </div>
        </div>
    </div>
    <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
        scrollTrigger: {
        trigger: "section", 
        start: "top top",
        end: "bottom bottom",
        scrub: 1,
        pin: ".pin-container",
        }
    });

    tl.to(".num-1", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-1", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-2", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-2", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-3", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-3", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-4", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-4", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-5", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-5", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-6", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-6", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-7", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-7", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-8", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-8", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-9", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-9", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-10", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-10", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-11", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-11", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-12", { opacity: 1, pointerEvents: "auto", duration: 1 })
        .to(".num-12", { opacity: 0, pointerEvents: "auto", duration: 1 }, "+=0.5")
        .to(".num-13", { opacity: 1, pointerEvents: "auto", duration: 1 });
    </script>
</Layout>
